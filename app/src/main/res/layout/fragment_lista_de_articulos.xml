<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/redmarket"
    android:alpha="1"
    android:id="@+id/fragmentArticulos_FrameLayout"
    tools:context=".view.FragmentListaDeArticulos">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:contentPadding="5dp"
        app:cardPreventCornerOverlap="false">
    <SearchView
        android:id="@+id/FragmntArticulos_SearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTexto"
        android:queryHint="Que estas buscando?">
    </SearchView>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentArticulos_recycler"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</FrameLayout>