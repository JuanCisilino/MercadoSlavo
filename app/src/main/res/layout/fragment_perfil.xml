<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:alpha="1"
    android:id="@+id/FragmentPerfil_FrameLayout"
    tools:context=".view.FragmentPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.mahfa.dnswitch.DayNightSwitch
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/FragmentPerfil_DayNightSwitch"
            app:layout_constraintTop_toTopOf = "parent">
        </com.mahfa.dnswitch.DayNightSwitch>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/FragmentPerfil_imageview_Imagen">
        </ImageView>

        <EditText
            android:hint="Nombre"
            android:id="@+id/FragmentPerfil_editText_Nombre"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:gravity="center_horizontal"
            android:hint="Apellido"
            android:textStyle="bold"
            android:id="@+id/FragmentPerfil_editText_Apellido"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

        </EditText>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:padding="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp">

        <Button
            android:id="@+id/FragmentPerfil_Button_botonCargarImagen"
            android:text="Cargar Imagen"
            android:textColor="@color/colorTexto"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:padding="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp">

            <Button
                android:id="@+id/FragmentPerfil_Button_botonSubirImagen"
                android:text="Guardar Cambios"
                android:textColor="@color/colorTexto"
                android:background="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>